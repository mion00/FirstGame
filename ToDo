Class Player
{
    intanto Cirlce player;
    int lifes=3;
    int x;
    int y;

    public int getX()
    public int getY()
    public int getLifes()
    public void move (String direction)
        up, down, left, right
    public void looseLife()
    public void getLife()
}

Class Grid
{
    GridPane grid;
    Tile[][] matrix;
    int lato;

    Grid(int lato)
    @ public GridPane get()
    @ private void populate(double dim) !Per ade solo tile di default!
}

Class Tile
{
    Rectangle tile;
    int i;
    int j;

    @ Tile(double dim, int i, int j)
    @ public int getI()
    @ public int getJ()
    @ public Rectangle get()
    @ public Paint getFill()
}

    
